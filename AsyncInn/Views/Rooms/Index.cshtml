@model IEnumerable<AsyncInn.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Async Inn</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>

<body>
    <h1 class="title">Rooms Index</h1>

    <h2>Navigation:</h2>
    <ul class="nav_menu">
        <li>
            <a href="/Home">Home</a>
        </li>
        <li>
            <a href="/Rooms">Rooms</a>
        </li>
        <li>
            <a href="/HotelRooms">Hotel Rooms</a>
        </li>
        <li>
            <a href="/Hotels">Hotels</a>
        </li>
        <li>
            <a href="/RoomAmenities">Room Amenities</a>
        </li>
        <li>
            <a href="/Amenities">Amenities</a>
        </li>
    </ul>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Layout)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Layout)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>